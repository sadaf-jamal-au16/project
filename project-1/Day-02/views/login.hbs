
<div class="container">
    <h1 class="text-center display-5">Login</h1>
    <div class="d-flex justify-content-center align-items-center">
        <form action="/loginProfile" method="POST" enctype="multipart/form-data">
            
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" name="name" value="John Doe" class="form-control" id="name">
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Enter your username</label>
                <input type="email" name="email" class="form-control" id="username" value="johnDoe@jasper.info">
            </div>
            <div class="mb-3">
                <label for="demoFile" class="form-label">Password</label>
                <input type="password" name="password" value="123abc" class="form-control" id="password">
            </div>
            
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

</div>
